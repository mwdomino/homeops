{
  "builders": [
    {
      "CPUs": "{{user `vm-cpu-num`}}",
      "RAM": "{{user `vm-mem-size`}}",
      "RAM_reserve_all": false,
      "boot_command": [
        "<esc><wait>",
        "linux ks=hd:fd0:/ks.cfg<enter>"
      ],
      "boot_order": "disk,cdrom,floppy",
      "boot_wait": "10s",
      "cluster": "{{user `vsphere-cluster`}}",
      "convert_to_template": true,
      "datacenter": "{{user `vsphere-datacenter`}}",
      "datastore": "{{user `vsphere-datastore`}}",
      "disk_controller_type": "pvscsi",
      "floppy_files": [
        "ks.cfg"
      ],
      "guest_os_type": "centos7_64Guest",
      "insecure_connection": "true",
      "iso_paths": [
        "{{user `iso_url`}}"
      ],
      "network_adapters": [
        {
          "network": "{{user `vsphere-network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "Build via Packer",
      "ssh_keypair_name": "matt-mbp",
      "ssh_private_key_file": "/Users/matt/.ssh/id_rsa",
      "ssh_username": "root",
      "storage": [
        {
          "disk_size": "{{user `vm-disk-size`}}",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "username": "{{ user `vsphere_user` }}",
      "password": "{{ user `vsphere_password` }}",
      "vcenter_server": "{{ user `vsphere_server` }}",
      "vm_name": "{{user `vm-name`}}"
    }
  ],
  "variables": {
    "iso_url": "[1tb-ssd] centos7.2003-minimal.iso",
    "vm-cpu-num": "2",
    "vm-disk-size": "25600",
    "vm-mem-size": "4096",
    "vm-name": "centos7-base",
    "vsphere-cluster": "cluster1",
    "vsphere-datacenter": "rdu1",
    "vsphere-datastore": "1tb-ssd",
    "vsphere-network": "VLAN300-Lab",
    "vsphere_server": "null",
    "vsphere_user": "null",
    "vsphere_password": "null"
  }
}

